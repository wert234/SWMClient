<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SWMClient.Infrastructure.Controls.DwaresItem" Loaded="ContentView_Loaded">

    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Grid WidthRequest="250">
                <Label TextColor="White" x:Name="Name"/>
            </Grid>
            <Grid WidthRequest="250">
                <Label TextColor="White" x:Name="Class"/>
            </Grid>
        </HorizontalStackLayout>
        <BoxView BackgroundColor="LightGray" HeightRequest="2" />
    </VerticalStackLayout>

    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
    </ContentView.GestureRecognizers>
</ContentView>
