<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SWMClient.Infrastructure.Controls.AvtorizeEntry">

    <Border
                WidthRequest="320"
                Opacity="0.7"
                StrokeThickness="1"
                Stroke="black"
                HorizontalOptions="Center">

        <HorizontalStackLayout>
            <Image
                x:Name="ImageEntryControl"
                Margin="5" 
                WidthRequest="35"/>
            <Entry 
                BackgroundColor="Transparent"
                TextChanged="TextEntryControl_TextChanged"
                TextColor="Black" 
                WidthRequest="250" 
                x:Name="TextEntryControl"/>
        </HorizontalStackLayout>
    </Border>
    
</ContentView>
