<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SWMClient.Infrastructure.Controls.MenuItem"
             x:Name="MenuItemControl" Loaded="MenuItemControl_Loaded">


    <Border Style="{x:StaticResource BoredrMenuItem}">
        <Grid>
            <Image Style="{StaticResource ImageStartItem }" x:Name="ImageStartControl"/>
            <Label  x:Name="TextControl" />
            <Image Style="{StaticResource ImageEndItem }"  x:Name="ImageEndControl"/>
        </Grid>
    </Border>
</ContentView>
